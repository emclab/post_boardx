<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
  <% else %>
<%= simple_form_for @post do |f| %>    
	  <%= f.input :start_date, :label => t('Post Start Date'), :as => :string, :readonly => readonly?(@post, 'start_date') %>  
	  <%= f.input :expire_date, :label => t('Post Expire Date'), :as => :string, :readonly => readonly?(@post, 'expire_date') %>
	  <%= f.input :subject, :label => t('Subject'), :readonly => readonly?(@post, 'subject') %>
	  <%= f.input :content, :label => t('Content'), :input_html => {:rows => 5}, :readonly => readonly?(@post, 'content') %>
	  <%= f.input :submitted_by_name, :label => t('Submitted by'), :readonly => true, :required => false, :input_html => {:value => @post.submitted_by.name} %>
	  <%= f.input :last_updated_by_name, :label => t('Last Updated by'), :readonly => true, :required => false, :input_html => {:value => @post.last_updated_by.name} %>
	  
	  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
	  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>  

<% end %>
