<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
  <% else %>
<div id="main_body">
<h4><%=@title %></h4>

<p>
  <b><%= t('Submitted By') %></b>
  <%= @post.submitted_by.name %>
</p>
<p>
  <b><%= t('Subject') %></b>
  <%= @post.subject %>
</p>
<p>
  <b><%= t('Content') %></b>
  <%= @post.content %>
</p>
<% unless noshow?(@post, 'start_date')%>
<p>
  <b><%= t('Post Start Date') %></b>
  <%= @post.start_date.strftime('%Y/%m/%d') if @post.start_date.present? %>
</p>
<% end %>
<% unless noshow?(@post, 'expire_date')%>
<p>
  <b><%= t('Post Expire Date') %></b>
  <%= @post.expire_date.strftime('%Y/%m/%d') if @post.expire_date.present? %>
</p>
<% end %>
<p>
  <b><%= t('Last Updated By') %></b>
  <%= @post.last_updated_by.name %>
</p>
<p>
  <b>LOGï¼š</b>
  <% Commonx::Log.where('resource_id = ? AND resource_name = ?', @post.id, params[:controller].sub('/', '_')).order("created_at DESC").each do |t| %>
    <li><%= t.created_at.strftime("%Y/%m/%d") %>,&nbsp; <%= t.last_updated_by.name %>,&nbsp; <%= t.log %> </li>
  <% end %>
</p>
   <table class="table table-striped">
	  <tr>
	    <th>
  			<%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :id => 'close', :class => BUTTONS_CLS['action'] %>
  			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= link_to t('New Log'), SUBURI + commonx.new_log_path(:resource_id => @post.id, :resource_name => params[:controller], :subaction => 'public_post', :format => :js), :remote => true, 
                          :id => 'new_log_link', :class => BUTTONS_CLS['action'] if has_action_right?('create_' + 'public_post', 'commonx/logs') %>
         </th>
	  </tr>
	</table>    	
</div>

<% end %>
