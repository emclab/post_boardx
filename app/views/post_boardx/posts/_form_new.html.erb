<% if @view_in_config && @erb_code  %>
  <%= render inline: @erb_code %>
  
  <% else %>
<%= simple_form_for @post do |f| %>    
	  <%= f.input :start_date, :label => t('Post Start Date'), :as => :string %>  
	  <%= f.input :expire_date, :label => t('Post Expire Date'), :as => :string %>
	  <%= f.input :subject, :label => t('Subject') %>
	  <%= f.input :content, :label => t('Content'), :input_html => {:rows => 5} %>
	  	  
	  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
	  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>
  
<% end%>

